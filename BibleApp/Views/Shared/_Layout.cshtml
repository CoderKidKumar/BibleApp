<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Bible | TheFlameExperience</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-expand navbar-light bg-white border-bottom">
            <div class="container-fluid">
                <div style="flex-grow: 0;">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><div class="text-center col-xs-offset-1 col-xs-2"><i class="bi bi-house-fill" style="font-size: 1.5rem;"></i><br />Home</div></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Read" asp-action="Index"><div class="text-center col-xs-offset-1 col-xs-2"><i class="bi bi-book-fill" style="font-size: 1.5rem;"></i><br />Read</div></a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Plans" asp-action="Index"><div class="text-center col-xs-offset-1 col-xs-2"><i class="bi bi-bookmark-check-fill" style="font-size: 1.5rem;"></i><br />Plans</div></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Videos" asp-action="Index"><div class="text-center col-xs-offset-1 col-xs-2"><i class="bi bi-collection-play-fill" style="font-size: 1.5rem;"></i><br />Videos</div></a>
                        </li>
                       
                    </ul>
                </div>
                <form>
                    <div class="input-group">
                        <button class="input-group-text bg-white"><i class="bi bi-search"></i></button>
                        <input class="searchMe form-control" type="search" placeholder="Search" aria-label="Search">
                    </div>
                </form>
                <a class="btn btn-outline-secondary" href="#" role="button">Login</a>
            </div>
        </nav>
    </header>
    <div class="container pt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="navbar fixed-bottom navbar-light bg-white">
        <div class="container-fluid">
            <h6>TheFlameExperience &copy; 2021</h6>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
